= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field.form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field.form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .field.form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .field.form-group
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .field.form-group
    = f.label :status
    = f.text_field :status, class: 'form-control'
  .actions
    = link_to 'Back', users_path, class: 'btn btn-outline-secondary', role: 'button'
    = f.button 'Save', class: 'btn btn-primary'
